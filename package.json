{
  "name": "xc-mongo-db",
  "version": "0.0.8_dev",
  "author": "Fran Cadaval",
  "description": "This library provides support for the MongoDB database.",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean & tsc",
    "clean": "tsc --build --clean & rimraf dist",
    "test": "jest",
    "test:e2e": "jest --config ./jest-e2e.config.js --detectOpenHandles",
    "test:e2e-watch": "jest --config ./jest-e2e.config.js --detectOpenHandles --watch",
    "e2e-test": "npm run build & node ./dist/e2e-test.js"
  },
  "keywords": [
    "mongodb"
  ],
  "dependencies": {
    "bcrypt": "^5.1.1",
    "mongodb": "^6.13.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.9",
    "@nestjs/core": "^11.0.9",
    "@nestjs/testing": "^11.0.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.2",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-jest-mocker": "^1.2.0",
    "typescript-eslint": "^8.24.0"
  }
}
